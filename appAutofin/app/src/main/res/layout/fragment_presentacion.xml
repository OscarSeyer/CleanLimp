<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Compra.Casa.Presentacion">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/ic_back"
        android:text="Regresar"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="start|center"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_casa"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/casa"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_casa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Adquiere, construye, remodela o amplía tu departamento, casa, oficina, bodega o local comercial en cualquier parte de la República, con un plan de autofinanciamiento flexible para hacer tu sueño realidad. \n
        \n
        Con nuestro Plan Magnífico tu adjudicación está garantizada, puedes adelantar pagos sin penalización y siempre estarás protegido con un seguro de vida. \n \n
        Acércate a nosotros y aprovecha la gran oportunidad de estrenar casa."
        android:layout_margin="20dp"
        android:gravity="start"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        android:text="Continuar"
        android:textAllCaps="false"
        android:elevation="15dp"
        app:elevation="15dp"
        app:cornerRadius="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>